{
  "name": "@webdeveric/craco-plugin",
  "version": "0.2.2",
  "description": "Create your own CRACO plugins",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./index.js": "./dist/index.js",
    "./util": "./dist/util/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm run build -- --watch",
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "spellcheck": "cspell './src/**/*.ts' './*.{json,md}'",
    "lint": "eslint ./src --ext .ts --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run spellcheck && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webdeveric/craco-plugin.git"
  },
  "keywords": [
    "craco",
    "craco-plugin",
    "cra",
    "create-react-app"
  ],
  "author": "Eric King <eric@webdeveric.com>",
  "bugs": {
    "url": "https://github.com/webdeveric/craco-plugin/issues"
  },
  "homepage": "https://github.com/webdeveric/craco-plugin#readme",
  "prettier": "@webdeveric/prettier-config",
  "lint-staged": {
    "./src/**/*.ts|./*.{json,md}": "cspell lint --no-progress --no-summary --no-must-find-files",
    "./src/**/*.ts": "eslint --cache --fix",
    "./*.{json,md}": "prettier --write"
  },
  "peerDependencies": {
    "@craco/craco": "^6.0.0"
  },
  "dependencies": {
    "@types/node": "^16.3.0",
    "@types/webpack": "^4.0.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@webdeveric/utils": "^0.7.2"
  },
  "devDependencies": {
    "@webdeveric/eslint-config-ts": "^0.3.0",
    "@webdeveric/prettier-config": "^0.1.0",
    "cspell": "^5.4.1",
    "eslint": "^7.26.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.2"
  }
}
